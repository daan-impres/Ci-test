<!--?xml version="1.0" encoding="UTF-8"?-->
<project name="test project" default="build" basedir="../" >
    <target name="prepare">
        <mkdir dir="${basedir}/api" />
    </target>

    <target name="documentation">
      <exec dir="${basedir}" executable="docblox" failonerror="false">
            <arg line="run -d ${basedir} -t ${basedir}/api" />
      </exec>
    </target>

    <target name="phpcs" description="">
        <exec executable="phpcs" >
	    <arg line="--extenstions=php --ignore=build/* output="${basedir}/build/checkstyle.xml" />
            <arg value="--standard=PEAR" />
            <arg path="${basedir}" />
        </exec>
    </target>

    <target name="build" depends="prepare,phpcs,documentation" />
</project>

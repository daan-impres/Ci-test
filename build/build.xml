<?xml version="1.0" encoding="UTF-8"?>
<project name="testproject" default="build">
	<property file="./build.properties" />

	<target name="remotecleanup">
		<exec command="ssh ${ssh.user}@${ssh.host} rm -R ${deploy.target}/${project.name}/" />
	</target>

	<target name="prepare">
	</target>

	<target name="chmod">
	</target>

	<target name="copyfiles">
		<exec command="scp -r ${deploy.source} ${ssh.user}@${ssh.host}:${deploy.target}/ " />
	</target>
	
	<target name="startdeploy">
		<exec command="ssh ${ssh.user}@${ssh.host} cd ${deploy.target}/${project.name}/build/ &amp;&amp; phing deploy" />
	</target>

	<target name="deploy">
	</target>
	
	<target name="docblox">
		<docblox title="Api docs" destdir="${api.dir}">
			<fileset dir="${source.dir}">
				<include name="**/*.php" />
			</fileset>
		</docblox>		
	</target>
	<target name="build" depends="remotecleanup, copyfiles, startdeploy, docblox" />
</project>

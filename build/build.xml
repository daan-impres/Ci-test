<!--?xml version="1.0" encoding="UTF-8"?-->
<project name="test project" default="build" basedir="../" >
    <target name="prepare">
        <mkdir dir="${basedir}/api" />
    </target>

    <target name="documentation" depends="prepare">
      <exec dir="${basedir}" executable="docblox" failonerror="false">
            <arg line="run -d ${basedir} -t ${basedir}/api" />
      </exec>
    </target>

    <target name="phpcs" description="" depends="prepare">
        <exec executable="phpcs"
            output="${basedir}/build/checkstyle.xml" >
            <arg value="--standard=PEAR" />
            <arg path="${basedir}" />
        </exec>
    </target>

    <target name="build" depends="phpcs,documentation" />
</project>

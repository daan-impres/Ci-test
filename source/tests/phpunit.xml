<phpunit bootstrap="./application/bootstrap.php" colors="true">
	<testsuite name="Precision Tests">
		<directory>./</directory>
	</testsuite>	
	<filter>
		<whitelist>
			<directory suffix=".php">../application</directory>
			<exclude>
				<directory suffix=".phtml">../application</directory>
			</exclude>
		</whitelist>
	</filter>
	
	<logging>
   		<log type="coverage-html" target="../../build/phpunit" charset="UTF-8" yui="true" highlight="true" lowUpperBound="50"  highLowerBound="80" />
        <log type="coverage-xml" target="../../build/log/clover.xml" charset="UTF-8" yui="true" highlight="true" lowUpperBound="50"  highLowerBound="80" />
        <log type="junit" target="../../build/log/junit.xml" charset="UTF-8" yui="true" highlight="true" lowUpperBound="50"  highLowerBound="80" />

	</logging>
</phpunit>
